{% macro getPostEditorUrl(postId) %}
    {% set postEditorUrl = getCurrentUrl() %}
    {% if postId %}
        {% set postEditorUrl = postEditorUrl ~ "?post-id=" ~ postId %}
    {% endif %}
    {{ postEditorUrl }}
{% endmacro %}