{% extends 'admin/adminLayout.twig' %}

{# head #}
{% block title %}
    Editeur d'image
{% endblock %}

{# body #}
{% block headerTitle %}
    <h1>Editeur d'image</h1>
{% endblock %}

{% block content %}
    <section class="blog-admin row">
        {% include "message.twig" %}
        <div class="col-12 col-lg-6">
            <div>
                {# Cancel button #}
                <a class="btn cancel-button" href="/admin/media-library">Retour</a>
            </div>

            <div>
                {# Delete #}
                <form action="/admin/image-editor/delete" method="post">

                    {# CSRF protection #}
                    <input type="hidden" name="csrf-token" value="{{ getCsrfToken() }}">

                    <input type="hidden" name="path" value="{{ imagePath }}">

                    <p>
                        <input class="btn" type="submit" value="Supprimer">
                    </p>
                </form>

                <div>
                    <h5>Adresse de l'image</h5>
                    <p>
                        {{ imagePath }}
                    </p>
                </div>

                {# Edit #}
                <form action="/admin/image-editor/edit" method="post">
                    <input type="hidden" name="path" value="{{ imagePath }}">

                    <h5>Redimensionner</h5>
                    <div class="row">
                        <label class="col-sm-3 col-12 text-sm-right">Largeur</label><input class="col-sm-3 col-12" type="number" id="resize-width" name="resize-width" placeholder="Largeur">
                        <label class="col-sm-3 col-12 text-sm-right">Hauteur</label><input class="col-sm-3 col-12" type="number" id="resize-height" name="resize-height" placeholder="Hauteur">
                    </div>

                    <h5>Rogner</h5>
                    <h6>Point de départ</h6>
                    <div class="row">
                        <label class="col-sm-3 col-12 text-sm-right">x</label><input class="col-sm-3 col-12" type="number" name="crop-x" placeholder="Départ x" value="0">
                            <label class="col-sm-3 col-12 text-sm-right">y</label><input class="col-sm-3 col-12" type="number" name="crop-y" placeholder="Départ y" value="0">
                    </div>
                    <h6>Dimensions</h6>
                    <div class="row">
                        <label class="col-sm-3 col-12 text-sm-right">Largeur</label><input class="col-sm-3 col-12" type="number" name="crop-width" placeholder="Largeur">
                            <label class="col-sm-3 col-12 text-sm-right">Hauteur</label><input class="col-sm-3 col-12" type="number" name="crop-height" placeholder="Hauteur">
                    </div>

                    <button class="btn btn-primary" type="button">Prévisualiser</button>
                    <input class="btn btn-primary" type="submit" value="Enregistrer">
                </form>
            </div>
        </div>

        {# Sample #}
        <div>
            <div id="image-info"></div>
            <figure>
                <img id="image-to-edit" src="{{ imagePath }}" alt="L'image à modifier">
            </figure>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/public/js/elementInfo.js"></script>
    <script>
        myElementInfo.show("image-info", "image-to-edit");
        document.getElementById('resize-width').value = myElementInfo.width('image-to-edit');
        document.getElementById('resize-height').value = myElementInfo.height('image-to-edit');
    </script>
{% endblock %}



