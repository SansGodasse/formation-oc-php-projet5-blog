{% extends "admin/adminLayout.twig" %}

{# head #}
{% block title %}
    Administration du blog
{% endblock %}

{# body #}
{% block headerTitle %}
    <h1>Administration du blog</h1>
{% endblock %}

{% block content %}
    <section id="blog-admin">

        {% include "message.twig" %}

        {# Comments #}
        {% if 'moderator' in roles %}
            <div class="admin-box">
                <h2>Commentaires</h2>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Statut</th>
                        <th>Commentaire</th>
                        <th>Auteur</th>
                        <th>Article</th>
                        <th>En réponse à</th>
                        <th>Date de création</th>
                        <th>Dernière modification</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>
                                {% if comment.isApproved %}
                                    Approuvé
                                {% else %}
                                    En attente
                                {% endif %}
                            </td>
                            <td>
                                <a class="admin-link font-weight-normal" href="/admin/comment-editor?id={{ comment.getId }}">{{ comment.getContent }}</a>
                            </td>
                            <td>
                                <a href="/member-profile?id={{ comment.getAuthorId }}">{{ comment.getAuthor }}</a>
                            </td>
                            <td>
                                <a href="/blog-post?post-id={{ comment.getPostId }}">{{ comment.getPostTitle }}</a>
                            </td>
                            <td>
                                {% if comment.getParentId %}
                                    <a class="comment-info" href="/member-profile?id={{ comment.getParent.getAuthorId }}">{{ comment.getParent.getAuthor }}</a><br>
                                    <span class="comment-info">{{ comment.getParent.getCreationDate }}</span><br>
                                    <a class="admin-link font-weight-normal comment-info" href="/admin/comment-editor?id={{ comment.getParent.getId }}">{{ comment.getParent.getContent }}</a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <span class="table-date">{{ comment.getCreationDate }}</span>
                            </td>
                            <td>
                                {% if comment.getLastModificationDate %}
                                    <span class="table-date">{{ comment.getLastModificationDate }} par <a href="/member-profile?id={{ comment.getLastEditorId }}">{{ comment.getLastEditor }}</a></span>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        {# Posts#}
        <div class="admin-box w100">
            <h2>Articles</h2>

            {% if 'author' in getUser().getRoles %}
                <p>
                    <a class="btn" href="/admin/post-editor">Ajouter un article</a>
                </p>
            {% endif %}

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Titre</th>
                        <th scope="col">Auteur</th>
                        <th scope="col">Etiquettes</th>
                        <th scope="col">Catégories</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Dernière modification</th>
                    </tr>
                </thead>

                <tbody>
                {% for post in posts %}
                    <tr>
                        <td scope="row">
                            {% if 'author' in getUser().getRoles and post.getAuthorId is same as(getUser().getId) or 'editor' in roles %}
                                <form action="/admin/post-editor" method="post">
                                    <input type="hidden" name="post-id" value="{{ post.getId }}">
                                    <input class="admin-link" type="submit" value="{{ post.getTitle }}">
                                </form>
                            {% else %}
                                <span>{{ post.getTitle }}</span>
                            {% endif %}
                        </td>
                        <td scope="row">
                            <a href="/member-profile?id={{ post.getAuthorId }}">{{ post.getAuthorName }}</a>
                        </td>
                        <td scope="row">
                            {% set postTags = post.getTags %}
                            {% if postTags %}
                                {% for tag in postTags %}
                                    <span class="table-tag">#{{ tag.getName }}</span>
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td scope="row">
                            {% set postCategories = post.getCategories %}
                            {% if postCategories %}
                                {% for category in postCategories %}
                                    {{ category.getName }}
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td scope="row">
                            <span class="table-date">{{ post.getCreationDate }}</span>
                        </td>
                        <td scope="row">
                            {% if post.getLastModificationDate %}
                                <span class="table-date">{{ post.getLastModificationDate }} par <a href="/member-profile?id={{ post.getLastEditorId }}">{{ post.getEditorName }}</a></span>
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

                <tfoot>
                    <tr>
                        <th scope="col">Titre</th>
                        <th scope="col">Auteur</th>
                        <th scope="col">Etiquettes</th>
                        <th scope="col">Catégories</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Dernière modification</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <hr>

        {% if 'editor' in roles %}
        {# Categories #}
        <div class="admin-box">
            <h2>Catégories</h2>

            {# Add a category button #}
            <p>
                <a class="btn" href="/admin/category-editor">Ajouter une catégorie</a>
            </p>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Catégorie</th>
                        <th>Etiquettes associées</th>
                    </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <form action="/admin/category-editor" method="post">
                                <input type="hidden" name="category-id" value="{{ category.getId() }}">
                                <input class="available-category admin-link" type="submit" value="{{ category.getName() }}">
                            </form>
                        </td>
                        <td>
                            {% set categoryTags = category.getTags() %}
                            {% if categoryTags %}
                                {% for tag in categoryTags %}
                                    <span class="table-tag">#{{ tag.getName }}</span>
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <hr>

        {# Tags #}
        <div class="admin-box">
            <h2>#Etiquettes</h2>

            <form id="admin-tag-list-form" action="/admin/update-tags" method="post">
                <p>
                    {# Update list button #}
                        <div>
                            <input id="update-tag-list-btn" class="btn" type="submit" value="Mettre à jour la liste des étiquettes">
                        </div>
                        {# Cancel button #}
                        <div>
                            <button class="btn cancel-button" type="button" onclick="window.location = '/admin';">Annuler</button>
                        </div>
                </p>

                <ul id="tag-list">
                    {% for tag in tags %}
                        <li>
                            <input type="hidden" name="tag_ids[]" value="{{ tag.getId() }}">
                            <span>#</span>
                            <input class="available-tag text-center admin-tag underline-input" type="text" name="tag_names[]" value="{{ tag.getName() }}" onkeyup="myApp.refreshValue(event); myBlogAdmin.highlightIncorrectTags();">
                            <span class="btn sign-btn-small" onclick="myApp.eraseTool.eraseElementFromEvent(event)">🗑</span>
                        </li>
                    {% endfor %}

                    <li id="new-tag-input-li">
                        <span>#</span>
                        <input id="new-tag-input" class="underline-input" type="text" name="new-tag-input" placeholder="Nouvelle étiquette" onkeydown="myBlogAdmin.addTagOnEnter(event);">
                        <button type="button" id="new-tag-btn" class="btn sign-btn">+</button>
                    </li>
                </ul>
            </form>
        </div>
        {% endif %}

        <hr>

        {% if 'admin' in roles %}
        {# Member management #}
        <div class="admin-box">
            <h2>Membres du site</h2>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">
                            Nom
                        </th>
                        <th scope="col">
                            Email
                        </th>
                        <th scope="col">
                            Rôles
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for member in members %}
                    <tr>
                        <td scope="row">
                            <a class="admin-link" href="/member-profile?id={{ member.getId }}">{{ member.getName }}</a>
                        </td>
                        <td scope="row">
                            {{ member.getEmail }}
                        </td>
                        <td scope="row">
                            {% for role in member.getRoles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

    </section>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        myBlogAdmin.setTagEventListeners();
    </script>
{% endblock %}