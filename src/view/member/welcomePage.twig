{% extends "member/memberLayout.twig" %}

{# head #}

{% block title %}
    Bienvenue
{% endblock %}

{# body #}

{% block headerTitle %}
    <div class="site-heading">
        <h1>Bienvenue !</h1>
    </div>
{% endblock %}

{% block content %}
