<div class="comment-form-wrapper row">
    <div class="offset-lg-2 col-lg-8 col-12">
        <form action="/add-comment" method="post">
            <input type="hidden" name="post-id" value="{{ post.getId }}">
            <input type="hidden" name="author-id" value="{{ connectedMember.getId }}">
            <textarea class="form-control" name="comment" id="comment" cols="30" rows="5" placeholder="Votre commentaire"></textarea>
            <input class="btn btn-small" type="submit" value="Ajouter le commentaire">
        </form>
    </div>
</div>