{% extends "layout.twig" %}

{# head #}
{% block title %}
    {{ post.getTitle }}
{% endblock %}

{# body #}
{% block headerTitle %}
    <div class="post-heading">
        <h1>{{ post.getTitle }}</h1>
        <span class="meta">{% include 'blog/postMeta.twig' %}</span>
    </div>
{% endblock %}

{% block content %}
    {% include 'message.twig' %}
    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-12 mx-auto">

                    {# Classification #}
                    {% include 'blog/blogpostClassification.twig' %}

                    <div class="blogpost-excerpt">
                        {{ post.getExcerpt|raw }}
                    </div>

                    <div class="blogpost-content">
                        {{ post.getContent|raw }}
                    </div>
                </div>
            </div>
        </div>
    </article>

    <hr>
    <div class="container-fluid">
        {% if connectedMember %}
            {% include 'blog/commentForm.twig' %}
            <hr>
        {% endif %}

        {% include'blog/comments.twig' %}
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/comment.js"></script>
{% endblock %}