{% extends "layout.twig" %}

{% block title %}
    Administration
{% endblock %}

{% block header %}
    <h1>Gestion des articles</h1>
{% endblock %}

{% block content %}
    <section id="blog-admin">

        {% include "blog/message.twig" %}

        {# Posts#}
        <div class="admin-box w100">
            <h2>Articles</h2>

            <p>
                <a class="btn" href="/admin/post-editor">Ajouter un article</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Etiquettes</th>
                        <th>Commentaires</th>
                        <th>Date de création</th>
                    </tr>
                </thead>

                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>
                            <form action="/admin/post-editor" method="post">
                                <input type="hidden" name="post-id" value="{{ post.getId }}">
                                <input class="admin-blogpost-title" type="submit" value="{{ post.getTitle }}">
                            </form>
                        </td>
                        <td>
                            coming soon...
                        </td>
                        <td>
                            {% set postTags = post.getTags() %}
                            {% if postTags %}
                                {% for tag in postTags %}
                                    {{ tag.getName() }}
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            coming soon...
                        </td>
                        <td>
                            {{ post.getCreationDate }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

                <tfoot>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Etiquettes</th>
                        <th>Commentaires</th>
                        <th>Date de création</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        {# Tags #}
        <div class="admin-box">
            <h2>Etiquettes</h2>

            <form id="admin-tag-list-form" action="/admin/update-tags" method="post">

                <input id="update-tag-list-btn" class="btn" type="submit" value="Mettre à jour la liste des étiquettes">

                <input type="hidden" name="action" value="update-tag-list">

                <ul id="tag-list">
                    {% for tag in tags %}
                        <li>
                            <input type="hidden" name="tag_ids[]" value="{{ tag.getId() }}">
                            <input class="available-tag" type="text" name="tag_names[]" value="{{ tag.getName() }}" onkeyup="myApp.refreshValue(event); highlightIncorrectTags();"><span class="closing-cross" onclick="myApp.eraseTool.eraseElementFromEvent(event)">X</span>
                        </li>
                    {% endfor %}

                    <li id="new-tag-input-li">
                        <input id="new-tag-input" type="text" name="new-tag-input" placeholder="Ajouter une nouvelle étiquette">
                        <button type="button" id="new-tag-btn" class="btn btn-small">+</button>
                    </li>
                </ul>
            </form>
        </div>

        <div class="admin-box">
            <h2>Catégories</h2>

            {# Add a category button #}
            <p>
                <a class="btn" href="/admin/category-editor">Ajouter une catégorie</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <th>Catégorie</th>
                        <th>Etiquettes associées</th>
                    </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <form action="/admin/category-editor" method="post">
                                <input type="hidden" name="category-id" value="{{ category.getId() }}">
                                <input class="available-category" type="submit" value="{{ category.getName() }}">
                            </form>
                        </td>
                        <td>
                            {% set categoryTags = category.getTags() %}
                            {% if categoryTags %}
                                {% for tag in categoryTags %}
                                    {{ tag.getName }}
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {% include "blog/adminFooter.twig" %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/blogAdmin.js"></script>
{% endblock %}