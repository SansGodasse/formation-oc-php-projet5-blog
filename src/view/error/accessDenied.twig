{% extends "layout.twig" %}

{% block title %}
    Accès interdit
{% endblock %}

{% block content %}
    <h2>Accès interdit</h2>

    {% if getUser() %}
        <p>Vous n'avez pas accès à cette partie du site.</p>
    {% else %}
        <p>Vous devez être connecté pour accéder à cette partie du site.</p>
        <p>
            <a class="btn btn-primary" href="/connection">Se connecter</a>
        </p>
    {% endif %}

    <p><a href="/home">Revenir à l'accueil</a></p>
{% endblock %}