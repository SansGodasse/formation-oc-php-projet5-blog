<form action="/home?action=contact" method="post">
    <div class="form-group">
        <input type="email" class="form-control" id="contact-email" name="contact-email" placeholder="Votre email">
    </div>
    <div class="form-group">
        <textarea class="form-control" name="contact-message" id="contact-message" cols="30" rows="5" placeholder="Votre message"></textarea>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-small" type="submit" value="Envoyer">
    </div>
</form>